<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.study.mapper.User1Mapper">

    <select id="select" resultType="kr.co.study.dto.User1DTO">
        select * from tb_user1 where userid = #{userid}
    </select>

    <select id="selectAll" resultType="kr.co.study.dto.User1DTO">
        select * from tb_user1
    </select>

    <insert id="insert">
        insert into tb_user1 values(#{userid}, #{name}, #{birth}, #{age})
    </insert>

    <update id="update">
        update tb_user1 set name = #{name},
                            birth = #{birth},
                            age = #{age}
                        where userid = #{userid}
    </update>

    <delete id="delete">
        delete from tb_user1 where userid=#{userid}
    </delete>

</mapper>