<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.study.mapper.User2Mapper">

    <select id="getUserById" resultType="kr.co.study.dto.User2DTO">
        select * from tb_user2 where userid = #{userid}
    </select>

    <select id="getAllUsers" resultType="kr.co.study.dto.User2DTO">
        select * from tb_user2
    </select>

    <insert id="insert">
        insert into tb_user2 values(#{userid}, #{name}, #{gender}, #{age})
    </insert>

    <update id="update">
        update tb_user2 set name = #{name},
        birth = #{gender},
        age = #{age}
        where userid = #{userid}
    </update>

    <delete id="delete">
        delete from tb_user2 where userid=#{userid}
    </delete>

</mapper>